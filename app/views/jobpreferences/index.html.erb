<p id="notice"><%= notice %></p>

<h1>Listing Jobpreferences</h1>

<table>
  <thead>
    <tr>
      <th>Jobtitle</th>
      <th>Job title</th>
      <th>Job role</th>
      <th>Role type</th>
      <th>Location</th>
      <th>Happy to relocate</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobpreferences.each do |jobpreference| %>
      <tr>
        <td><%= jobpreference.jobtitle %></td>
        <td><%= jobpreference.job_title %></td>
        <td><%= jobpreference.job_role %></td>
        <td><%= jobpreference.role_type %></td>
        <td><%= jobpreference.location %></td>
        <td><%= jobpreference.happy_to_relocate %></td>
        <td><%= jobpreference.user_id %></td>
        <td><%= link_to 'Show', jobpreference %></td>
        <td><%= link_to 'Edit', edit_jobpreference_path(jobpreference) %></td>
        <td><%= link_to 'Destroy', jobpreference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

