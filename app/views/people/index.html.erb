<div class="page-header">
    <h3 align="center">Ruby CV Builder's Customer</h3>
   <div class="contextual">
  </div>
</div>
<table class="table table-striped table-bordered table-condensed">
<thead>
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Town</th>
      <th>CV Download</th>
      <th>Show </th>

    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>

        <td colspan="1"><%= person.forename1 %></td>

        <td colspan="1"><%= person.surname %></td>

        <td colspan="1"><%= person.town %></td>
        <td colspan="1"><%= link_to "Download", person.mycv.url(:original, false) %></td>

        <td colspan="1"><%= link_to 'Show', person %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
