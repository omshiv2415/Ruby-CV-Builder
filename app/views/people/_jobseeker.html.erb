<div class="page-header">
<div class="contextual">
<div class="panel panel-default">
<div class="panel-heading">Search Job Seeker <%= @people.count %></div>

 <div class="panel-body">
  <div class="row">
  <div class="col-lg-4">
    <div class="input-group">
      <%= form_tag(people_path, :method => "get") do %>
      <%= text_field_tag :search_skill, params[:search_skill], class: "form-control", placeholder: "Search by Skill" %>
      <span class="input-group-btn">
        <br/>
        <%= submit_tag "Search", class: 'btn btn-primary' %>
      </span>
      <% end %>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
    <div class="col-lg-4">
    <div class="input-group">
      <%= form_tag(people_path, :method => "get") do %>
      <%= text_field_tag :search_exp, params[:search_exp], class: "form-control", placeholder: "Search by Job title" %>
      <span class="input-group-btn">
        <br/>
        <%= submit_tag "Search", class: 'btn btn-primary' %>
      </span>
      <% end %>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
    <div class="col-lg-4">
    <div class="input-group">
      <%= form_tag(people_path, :method => "get") do %>
      <%= text_field_tag :search_edu, params[:search_edu], class: "form-control", placeholder: "Search by Degree...BSc" %>
      <span class="input-group-btn">
        <br/>
        <%= submit_tag "Search", class: 'btn btn-primary' %>
      </span>
      <% end %>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
</div><!-- /.row -->
<hr/>
<h5 align="right"> Total No of Clients <%= @people.count %> </h5>
<table class="table table-striped table-bordered table-condensed">
<thead>
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Town</th>
      <th>Client Uploaded CV</th>
      <th>System Generated CV</th>
      <th>Show </th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td colspan="1"><%= person.forename1 %></td>
        <td colspan="1"><%= person.surname %></td>
        <td colspan="1"><%= person.town %></td>
        <% if !person.mycv.blank? %>
        <td colspan="1"><%= link_to "Download", person.mycv.url(:original, false) %></td>
        <% else %>
        <td colspan="1">Not Available</td>
        <% end %>
        <td colspan="1"><%= link_to 'Download', welcome_show_path(:id => person.id, format: 'pdf') %></td>
        <td colspan="1"><%= link_to 'Show', person_path(:id => person.id)%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>
<%= link_to 'Back', root_path %>