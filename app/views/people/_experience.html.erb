<% if !@people.blank? %>
<h5 align="right"> Total No of Clients <%= @people.count %> </h5>
<table class="table table-striped table-bordered table-condensed">
<thead>
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Experience As</th>
      <th>Client Uploaded CV</th>
      <th>System Generated CV</th>
      <th>Show </th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td colspan="1"><%= person.forename1 %></td>
        <td colspan="1"><%= person.surname %></td>
        <td colspan="1"><%= person.other_jobtitle %></td>
        <% if !person.mycv.blank? %>
        <td colspan="1"><%= link_to "Download", person.mycv.url(:original, false) %></td>
        <% else %>
        <td colspan="1">Not Available</td>
        <% end %>
        <td colspan="1"><%= link_to 'Download', welcome_show_path(:id => person.user_id, format: 'pdf') %></td>
        <td colspan="1"><%= link_to 'Show', person_path(:id => person.user_id)%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<h3>No record Found with Experience "<%= params[:search_exp] %>"</h3>
<% end %>
<br>
<%= link_to 'Back', root_path %>